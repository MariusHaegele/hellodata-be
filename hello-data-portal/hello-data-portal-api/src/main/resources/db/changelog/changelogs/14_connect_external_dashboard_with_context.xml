<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="13" author="slawomir.wieczorek">
        <comment>Delete all data from external_dashboard table</comment>
        <sql>
            DELETE
            FROM external_dashboard;
        </sql>
        <comment>Extend external_dashboard table with context_id and foreign key</comment>
        <addColumn tableName="external_dashboard">
            <column name="context_key" type="varchar">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <comment>Add foreign key constraint between external_dashboard and context</comment>
        <addForeignKeyConstraint baseTableName="external_dashboard"
                                 baseColumnNames="context_key"
                                 constraintName="fk_external_dashboard_context"
                                 referencedTableName="context"
                                 referencedColumnNames="context_key"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>
